@using OnlinePizzeria.Common
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @GlobalConstants.SystemName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand ml-5" asp-controller="Home" asp-action="Index"><span class=""><img width="70" height="70" src="https://w7.pngwing.com/pngs/890/893/png-transparent-pizza-logo-pizza-delivery-italian-cuisine-chef-pizza-icon-logo-design-food-logo-cooking.png" /></span><br></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div class="navbar-nav ml-5">
                        <div class="input-group">
                            <div class="">
                                <input type="search" placeholder="Search.." id="form" class="form-control" />
                            </div>
                            <button type="button" class="btn btn-primary" id="submit" onclick="getData()">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                    <ul class="navbar-nav ml-auto mr-4">
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Cart" asp-action="Index"><img id="image" width="25" height="25" src="https://www.seekpng.com/png/full/253-2534415_shopping-trolley-vector-png.png" /> Cart</a></li>

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Online Pizzeria - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script>
        function getData() {

            var selected = document.getElementById('form').value;
            window.location.href = `/Home/Search?data=${selected}`;
        }
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
